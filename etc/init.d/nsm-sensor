# Location: /etc/init.d/nsm-sensor
#
# Description:
#   Process control for all of the NSM sensor components.
#

case $1 in
    start)
        nsm --sensor --start
		;;
    stop)
        nsm --sensor --stop
		;;
    restart)
        nsm --sensor --restart
		;;
    status)
		nsm --sensor --status
		;;
    *)
        echo "Usage: $0 start|stop|restart|status"
		exit 1
        ;;
esac

exit 0
